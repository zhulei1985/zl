void InitClient(Client pClient)
{
	pClient->SetScriptLimit("Error_CannotRunScript",1);
	pClient->SetScriptLimit("RegisterAccount",1);
	pClient->SetScriptLimit("LoginAccount",1);
}
void RegisterAccount(string strAccount, string password, Client pClient)
{
	CArray AccountArray = GetVal4Data("Data","Account");
	if (CheckClassPoint(AccountArray) == 0)
	{
		AccountArray = NewArray();
		SetVal2Data("Data","Account",AccountArray);
	}
	CAccount pAccount = AccountArray->GetVal(strAccount);
	if (CheckClassPoint(pAccount))
	{
		//账号已存在，注册失败
		pClient->RunScript(0,"RegisterFail",pAccount);
		return;
	}
	pAccount = new CAccount;
	pAccount->SetAccountName(strAccount);
	pAccount->SetPassword(password);
	pAccount->SetNickName(strAccount);

	pAccount->SetConnectID(pClient->GetID());
	pClient->SetAccount(strAccount);
	AccountArray->SetVal(strAccount,pAccount);
	//发送注册成功，登录成功
	//pClient->RunScript(0,"RegisterSuccess",pAccount);
	pClient->RunScript(0,"LoginSuccess",pAccount);
	pClient->SetScriptLimit("Talk",1);
}
void LoginAccount(string strAccount, string password, Client pClient)
{
	CArray AccountArray = GetVal4Data("Data","Account");
	if (0 == CheckClassPoint(AccountArray))
	{
		AccountArray = NewArray();
		SetVal2Data("Data","Account",AccountArray);
	}
	CAccount pAccount = AccountArray->GetVal(strAccount);
	if (0 == CheckClassPoint(pAccount))
	{
		//账号不存在，登录失败
		pClient->RunScript(0,"LoginFail",pAccount,1);
		return;
	}
	if (password != pAccount->GetPassword())
	{
		//密码错误，登录失败
		pClient->RunScript(0,"LoginFail",pAccount,2);
		return;
	}

	pAccount->SetConnectID(pClient->GetID());
	pClient->SetAccount(strAccount);
	pClient->RunScript(0,"LoginSuccess",pAccount);
	pClient->SetScriptLimit("Talk",1);
}

void Talk(string strContent, Client pClient)
{

	if (strContent != "")
	{
		CArray AccountArray = GetVal4Data("Data","Account");
		if (CheckClassPoint(AccountArray))
		{
			CAccount pMainAccount = AccountArray->GetVal(pClient->GetAccount());
			int i = 0;
			while (i < AccountArray->GetSize())
			{
				CAccount pAccount = AccountArray->GetValByIndex(i);
				if (CheckClassPoint(pAccount))
				{
					Client pAccClient = GetClient(pAccount->GetConnectID());
					if (CheckClassPoint(pAccClient))
					{
						pAccClient->RunScript(0,"SendMessage",pMainAccount,strContent);
					}
				}
				i = i + 1;
			}
		}
	}
}
